---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Pagina niet gevonden | Turnen Hengelo';
const description = 'De pagina die je zoekt bestaat niet.';
---

<BaseLayout title={title} description={description}>
  <section class="error-section">
    <div class="container">
      <div class="error-content">
        <h1 class="error-title">404</h1>
        <h2 class="error-subtitle">Pagina niet gevonden</h2>
        <p class="error-text">De pagina die je zoekt bestaat niet of is verplaatst.</p>
        <a href="/" class="btn">Terug naar website</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :global(main) {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .error-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2xl) 0;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .error-title {
    font-size: 8rem;
    font-weight: 800;
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1;
  }

  @media (min-width: 768px) {
    .error-title {
      font-size: 12rem;
    }
  }

  .error-subtitle {
    font-size: 2rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  @media (min-width: 768px) {
    .error-subtitle {
      font-size: 2.5rem;
    }
  }

  .error-text {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-lg);
    color: var(--color-text);
    opacity: 0.8;
  }

  .error-content .btn {
    margin-top: var(--spacing-md);
  }
</style>

